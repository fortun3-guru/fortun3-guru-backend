# Nest
NEST_ENABLED=true
NEST_PORT=3000

# Security
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES=7d

# Swagger
SWAGGER_ENABLED=true
SWAGGER_TITLE=Fortun3 Guru Backend API
SWAGGER_DESCRIPTION=Fortun3 Guru Backend API
SWAGGER_VERSION=1.0.0
SWAGGER_SERVERS=http://localhost:3000
SWAGGER_PATH=/docs

# FIREBASE ADMIN
FIREBASEADMIN_TYPE="service_account"
FIREBASEADMIN_PROJECT_ID="your-project-id"
FIREBASEADMIN_PRIVATE_KEY_ID="your-private-key-id"
FIREBASEADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR-PRIVATE-KEY-CONTENT\n-----END PRIVATE KEY-----\n"
FIREBASEADMIN_CLIENT_EMAIL="your-service-account@your-project-id.iam.gserviceaccount.com"
FIREBASEADMIN_CLIENT_ID="your-client-id"
FIREBASEADMIN_AUTH_URI="https://accounts.google.com/o/oauth2/auth"
FIREBASEADMIN_TOKEN_URI="https://oauth2.googleapis.com/token"
FIREBASEADMIN_AUTH_PROVIDER_X509_CERT_URL="https://www.googleapis.com/oauth2/v1/certs"
